  <% if @users_by_role.any? %>
  <div class="members box">
    <h3><%=l(:label_member_plural)%></h3>
    <ul>
    <% @users_by_role.keys.sort.each do |role| %>
      <li><span class="label"><%= role %>:</span> <%= @users_by_role[role].sort.collect{|u| link_to_user u}.join(", ").html_safe %></li>
    <% end %>
  </ul>
  </div>
  <% end %>
